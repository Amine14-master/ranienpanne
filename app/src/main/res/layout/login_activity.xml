<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".YourActivity">

                <!-- Welcome Text -->

                <!-- Top Right Logo -->

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Welcome to Rannienpanne"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/img" />

                <!-- Center Image -->

                <!-- Phone Number Input -->

                <!-- Username Input -->

                <!-- User Type Spinner -->

                <!-- Login Button -->

                <!-- Bottom Background Image -->

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="273dp"
                    android:layout_height="46dp"
                    android:layout_alignStart="@+id/etPhoneNumber"
                    android:layout_alignTop="@+id/etPhoneNumber"
                    android:layout_alignEnd="@+id/etPhoneNumber"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0dp"
                    app:srcCompat="@drawable/phone_bar" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="278dp"
                    android:layout_height="57dp"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignStart="@+id/etUsername"
                    android:layout_alignEnd="@+id/etUsername"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="0dp"
                    app:srcCompat="@drawable/phone_bar" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="244dp"
                    android:layout_height="48dp"
                    android:layout_alignStart="@+id/spinnerType"
                    android:layout_alignTop="@+id/spinnerType"
                    android:layout_alignBottom="@+id/spinnerType"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="0dp"
                    app:srcCompat="@drawable/phone_bar" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvWelcome"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="55dp"
                    android:hint="Phone Number"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="55dp"
                    android:hint="Username"
                    android:inputType="text" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="245dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="55dp"
                    android:entries="@array/user_types" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="390dp"
                    android:layout_height="310dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="-1dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_2" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView10"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="116dp"
                    android:layout_marginEnd="27dp"
                    android:backgroundTint="#ffcc3e"
                    android:text="Login" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="-35dp"
                    android:layout_marginEnd="100dp"
                    app:srcCompat="@drawable/img_3" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_alignEnd="@+id/imageView7"
                    android:layout_alignBottom="@+id/etUsername"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="356dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="9dp"
                    app:srcCompat="@drawable/img_7" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="31dp"
                    android:layout_height="29dp"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_alignEnd="@+id/imageView6"
                    android:layout_alignBottom="@+id/etPhoneNumber"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="9dp"
                    app:srcCompat="@drawable/img_8" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="226dp"
                    android:layout_height="183dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="82dp"
                    android:layout_marginTop="23dp"
                    app:srcCompat="@drawable/img_6" />


        </RelativeLayout>
</RelativeLayout>
