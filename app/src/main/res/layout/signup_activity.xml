<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".YourSignupActivity">

        <!-- Welcome Text -->

        <!-- Top Right Logo -->


        <TextView
            android:id="@+id/tvWelcomeSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewSignupLogo"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Create Your Account"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Username Input -->

        <ImageView
            android:id="@+id/imageViewSignupLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="98dp"
            app:srcCompat="@drawable/img_1" />

        <!-- Phone Number Input -->

        <!-- User Type Spinner -->

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="366dp"
            android:layout_height="53dp"
            android:layout_alignStart="@+id/etSignupUsername"
            android:layout_alignTop="@+id/etSignupUsername"
            android:layout_alignEnd="@+id/etSignupUsername"
            android:layout_alignBottom="@+id/etSignupUsername"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/phone_bar" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="362dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/etSignupUsername"
            android:layout_alignTop="@+id/etSignupPhoneNumber"
            android:layout_alignEnd="@+id/etSignupUsername"
            android:layout_alignBottom="@+id/etSignupPhoneNumber"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/phone_bar" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="362dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/spinnerSignupType"
            android:layout_alignTop="@+id/spinnerSignupType"
            android:layout_alignEnd="@+id/spinnerSignupType"
            android:layout_alignBottom="@+id/spinnerSignupType"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/phone_bar" />

        <EditText
            android:id="@+id/etSignupUsername"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tvWelcomeSignup"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Username"
            android:inputType="text" />

        <!-- Signup Button -->

        <!-- Bottom Background Image -->


        <EditText
            android:id="@+id/etSignupPhoneNumber"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@id/etSignupUsername"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:hint="Phone Number"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="41dp"
            android:layout_height="31dp"
            android:layout_alignTop="@+id/imageView15"
            android:layout_alignEnd="@+id/imageView15"
            android:layout_alignBottom="@+id/imageView15"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="13dp"
            app:srcCompat="@drawable/img_8" />

        <Spinner
            android:id="@+id/spinnerSignupType"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@id/etSignupPhoneNumber"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="25dp"
            android:entries="@array/user_types" />

        <ImageView
            android:id="@+id/imageViewSignupBackground"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_5" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView12"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="134dp"
            android:layout_marginEnd="36dp"
            android:backgroundTint="#ffcc3e"
            android:padding="10dp"
            android:text="Signup" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="147dp"
            android:layout_height="72dp"
            android:layout_alignTop="@+id/imageViewSignupBackground"
            android:layout_alignParentStart="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="-13dp"
            app:srcCompat="@drawable/img_3" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignTop="@+id/imageView14"
            android:layout_alignEnd="@+id/imageView14"
            android:layout_alignBottom="@+id/imageView14"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="13dp"
            app:srcCompat="@drawable/img_7" />


    </RelativeLayout>
</RelativeLayout>
